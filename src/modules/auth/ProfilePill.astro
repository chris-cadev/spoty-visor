---
import type { User } from "@auth/core/types";

interface Props {
  user?: User;
}
const { user } = Astro.props;
---

<style>
  .profile {
    display: flex;
    gap: 8px;
    padding: 8px;
    box-sizing: border-box;
    align-items: center;
  }
  .picture {
    width: 3rem;
    height: 3rem;
    overflow: hidden;
    border-radius: 8px;
  }
  .picture img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .profile > p {
    margin: 0;
  }
</style>

<div class="profile">
  <div class="picture">
    <img src={user?.image} />
  </div>
  <p>{user?.name}</p>
</div>
